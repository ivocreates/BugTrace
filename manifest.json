{
  "manifest_version": 3,
  "name": "BugTrace - GitHub-Powered Debugging",
  "version": "1.0.0",
  "description": "GitHub-powered Chrome DevTools extension for intelligent debugging and error analysis",
  "author": "Ivo Pereira <ivopereiraix3@gmail.com>",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "debugger"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
